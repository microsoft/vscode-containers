{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch: ESBuild",
            "type": "npm",
            "script": "build:esbuild -- --watch",
            "problemMatcher": "$esbuild-watch",
            "presentation": {
                "reveal": "silent",
            },
            "group": {
                "kind": "build",
            },
            "isBackground": true,
        },
        {
            "label": "Watch: Check Types",
            "type": "npm",
            "script": "build:check -- --watch",
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "revealProblems": "onProblem",
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "isBackground": true,
        },
